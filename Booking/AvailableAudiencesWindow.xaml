<Window x:Class="Booking.AvailableAudiencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booking"
        mc:Ignorable="d"
        Title="Schedule" Height="324" Width="525" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">
        <Button Height="20" Width="100" Margin="5" HorizontalAlignment="Right" Click="ButtonFavourites_Click">Favourites</Button>
        <ComboBox Name="comboBoxBuildings" Text="Select building" HorizontalAlignment="Center" DisplayMemberPath="Name" IsEditable="True" IsReadOnly="True" Focusable="False" Width="200" Height="25" Margin="5" SelectionChanged="comboBoxBuldings_SelectionChanged"/>
        <ComboBox Name="comboBoxFloors" Text="Select floor" HorizontalAlignment="Center" DisplayMemberPath="Name" IsEditable="True" IsReadOnly="True" Focusable="False" Width="200" Height="25" Margin="5" SelectionChanged="comboBoxFloors_SelectionChanged"/>
        <DataGrid Name="dataGridAudiences" IsHitTestVisible="False" IsReadOnly="True" ColumnWidth="167" SelectionChanged="dataGridSchedule_SelectionChanged"/>
    </StackPanel>
</Window>
